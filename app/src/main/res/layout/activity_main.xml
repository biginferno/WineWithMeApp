<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.ryanromero.winewithme.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn"
        android:text="Scan Barcode or QR code" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvresult"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Result will be here"/>

    <Button
        android:id="@+id/Inventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inventory" />

    <Button
        android:id="@+id/RecentWine1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecentWine1" />

    <Button
        android:id="@+id/RecentWine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecentWine2" />

    <Button
        android:id="@+id/RecentWine3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecentWine3" />

    <Button
        android:id="@+id/RecentWine4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecentWine4" />
</LinearLayout>